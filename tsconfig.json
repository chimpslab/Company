{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "listFiles": false,
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "copyStaticAssets.ts",
        "dist.ts",
        "makei18n.ts",
        "watchify.ts",
        // "src/client/**/*",
        "test",
        "node_modules"
    ]
}